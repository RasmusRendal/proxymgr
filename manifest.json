{
  "manifest_version": 2,
  "name": "Proxy Manager",
  "version": "0.1",

  "description": "A browser extension for managing multiple proxies",

	"background": {
		"scripts": ["scripts/background.js"]
	},

	"permissions": [
  	"proxy",
		"tabs",
		"<all_urls>"
	],

	"browser_action": {
		"default_icon": {
			"19": "icon.png",
			"38": "icon.png"
		},
		"default_title": "Proxy manager",
		"default_popup": "popup.html"
	},

	"applications": {
	  "gecko": {
	    "id": "proxymanager@rend.al"
	  }
	}

}
