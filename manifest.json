{
  "manifest_version": 2,
  "name": "Proxy Manager",
  "version": "0.1",

  "description": "A browser extension for managing multiple proxies",

	"background": {
		"scripts": ["scripts/common.js", "scripts/background.js"]
	},

	"permissions": [
  	"proxy",
		"tabs",
		"storage",
		"<all_urls>"
	],

	"browser_action": {
		"default_icon": {
			"19": "icon.png",
			"38": "icon.png"
		},
		"default_title": "Proxy manager",
		"default_popup": "popup.html"
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"applications": {
	  "gecko": {
	    "id": "proxymanager@rend.al"
	  }
	}

}
